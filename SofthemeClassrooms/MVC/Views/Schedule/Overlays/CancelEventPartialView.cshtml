<link href="~/Content/Overlays/CancelEventPartialView.css" rel="stylesheet" />

<script src="https://use.fontawesome.com/8492b6eaf6.js"></script>
@model string

<div class="event-cancel-popup">
    <div class="event-cancel-header">
        <i class="fa fa-ban fa-2x" aria-hidden="true"></i>
        <span>Вы уверены, что хотите отменить событие @Model?</span>
        
    </div>

    <div class="cancellation-controls">
        <input type="button" class="confirm-cancellation-button" value="Да">
        <input type="button" class="discart-cancellation-button" value="Нет">
    </div>
</div>
