<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/Content/inputs.css" rel="stylesheet" />
    <link href="~/Content/validationError.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/loading.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/MyScripts.js"></script>
</head>
<body style="background-color: #f4f6fb; min-width: 760px">

    <div class="login-menu">
        <ul class="menu-list">
            <li class="menu-item"><a href="@Url.Action("ShowSchedule","Schedule")"><img class="menu-logo" src="~/Images/logo-gray.png" })" /></a></li>
            <li id="login-item" class="menu-item"><a href="@Url.Action("Login","Account")">Вход</a></li>
            <li id="Register-item" class="menu-item"><a href="@Url.Action("Register","Account")">Регистрация</a></li>
            <li id="ForgotPassword-item" class="menu-item"><a href="@Url.Action("ForgotPassword","Account")">Сменить пароль</a></li>
        </ul>
    </div>

    <div class="input-wrapper">
        <div class="upper-plane"></div>
        <div class="header-wrapper">
            <div class="header-plane">@RenderSection("header", false)</div>
        </div>
        <div class="bottom-plane">
            <div id="inputForm" class="input-area">
                <div id="inputs">
                    @RenderBody()
                </div>
                <img id="load-icon" src="~/Images/loader.gif" alt="loading"/>
            </div>
        </div>
    </div>
</body>
</html>
